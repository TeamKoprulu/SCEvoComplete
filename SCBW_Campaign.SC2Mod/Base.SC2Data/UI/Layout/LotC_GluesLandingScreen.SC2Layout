                </Frame>

                <Frame type="TabControl" name="TabControl">
                    <Anchor relative="$parent"/>
                    <Visible val="False"/>
                    <SelectedIndex val="4"/>

                    <TabListItem val="$parent/DiffButton1"/>
                    <TabListItem val="$parent/DiffButton2"/>
                </Frame>

                <Frame type="Button" name="DiffButton1" template="LotC_GlueMenuTemplates/DifficultyItemTemplate">
                    <Anchor side="Top" relative="$parent/TitleLabel" pos="Max" offset="26"/>
                    
                    <Height val="140"/>

                    <Frame type="Label" name="DifficultyTitle">
                        <Text val="@Launcher/UI/Difficulty2Title"/>
                    </Frame>

                    <Frame type="Label" name="DifficultyDescription">
                        <Text val="@Launcher/UI/Difficulty2Description"/>
                    </Frame>
                </Frame>

                <Frame type="Button" name="DiffButton2" template="LotC_GlueMenuTemplates/DifficultyItemTemplate">
                    <Anchor side="Top" relative="$parent/DiffButton1" pos="Max" offset="20"/>

                    <Height val="140"/>

                    <Frame type="Label" name="DifficultyTitle">
                        <Text val="@Launcher/UI/Difficulty3Title"/>
                    </Frame>

                    <Frame type="Label" name="DifficultyDescription">
                        <Text val="@Launcher/UI/Difficulty3Description"/>
                    </Frame>
                </Frame>

                <Frame type="Button" name="StartButton" template="KLClassic_GlueTemplates/StandardGlueButton">
                    <Anchor side="Right" relative="$parent" pos="Mid" offset="-10"/>
                    <Anchor side="Bottom" relative="$parent" pos="Max" offset="-24"/>

                    <Width val="255"/>
                    <Height val="64"/>
                    <ClickSound val="@UED_UI_Activate"/>
                    <Style val="UED_Glues_StandardUIButton"/>
                    <Enabled val="False"/>

                    <Text val="@UI/KLC/Launcher/Difficulty_Start"/>
                    <Shortcut val="@UI/KLC/Launcher/Difficulty_Start_Hotkey"/>
                </Frame>

                <Frame type="Button" name="CancelButton" template="KLClassic_GlueTemplates/StandardGlueButton">
                    <Anchor side="Left" relative="$parent" pos="Mid" offset="10"/>
                    <Anchor side="Bottom" relative="$parent" pos="Max" offset="-24"/>

                    <Width val="255"/>
                    <Height val="64"/>
                    <ClickSound val="@UED_UI_Cancel"/>
                    <Style val="UED_Glues_StandardUIButton"/>

                    <Text val="@UI/KLC/Launcher/Difficulty_Cancel"/>
                    <Shortcut val="@UI/KLC/Launcher/Difficulty_Cancel_Hotkey"/>
                </Frame>
            </Frame>
        </Frame>
    </Frame>

    <Frame type="Frame" name="GlueArchivesMenuTemplate">
        <Anchor relative="$parent"/>
        <Visible val="False"/>

        <Frame type="AspectRatioFrame" name="AspectRatioListener_16x9" template="LotC_GlueMenuTemplates/AspectRatioListener_Template">
            <MinVisibleAspectRatio val="1.77"/>
        </Frame>
        
        <Frame type="AspectRatioFrame" name="AspectRatioListener_16x10" template="LotC_GlueMenuTemplates/AspectRatioListener_Template">
            <MaxVisibleAspectRatio val="1.76"/>
            <MinVisibleAspectRatio val="1.52"/>
        </Frame>
        
        <Frame type="AspectRatioFrame" name="AspectRatioListener_4x3" template="LotC_GlueMenuTemplates/AspectRatioListener_Template">
            <MinVisibleAspectRatio val="1.33"/>
            <MaxVisibleAspectRatio val="1.51"/>
        </Frame>

        <Frame type="AspectRatioFrame" name="AspectRatioListener_5x4" template="LotC_GlueMenuTemplates/AspectRatioListener_Template">
            <MinVisibleAspectRatio val="1"/>
            <MaxVisibleAspectRatio val="1.329"/>
        </Frame>

        <Animation name="Show">
            <Event event="OnShown" action="Reset,Play" frame="$this"/>

            <Controller type="Visibility" end="Pause" frame="$this/GlueArchiveMapPanel">
                <Key type="Bool" time="0.0" value="False"/>
                <Key type="Bool" time="0.1" value="True"/>
            </Controller>

            <Controller type="Visibility" end="Pause" frame="$this/GlueArchivePanel">
                <Key type="Bool" time="0.0" value="False"/>
                <Key type="Bool" time="0.1" value="True"/>
            </Controller>

            <Controller type="Visibility" end="Pause" frame="$this/BackButton">
                <Key type="Bool" time="0.0" value="False"/>
                <Key type="Bool" time="0.1" value="True"/>
            </Controller>
        </Animation>

        <Animation name="LandingDeath">
            <Event event="Death" action="Reset,Play" frame="$this"/>

            <Controller type="Event" end="Pause" frame="$this/GlueArchiveMapPanel">
                <Key type="Event" time="0.1" event="Death"/>
            </Controller>

            <Controller type="Event" end="Pause" frame="$this/GlueArchivePanel">
                <Key type="Event" time="0.1" event="Death"/>
            </Controller>

            <Controller type="Event" end="Pause" frame="$this/BackButton">
                <Key type="Event" time="0.1" event="Death"/>
            </Controller>
        </Animation>

        <Frame type="Frame" name="GlueArchivePanel" template="LotC_GlueMenuTemplates/GlueLeftPanelTemplate">
            <Anchor side="Top" relative="$parent" pos="Min" offset="180"/>

            <Width val="470"/>
            <Height val="740"/>
            <Visible val="True"/>
            <StateGroup name="AspectRatioState">
                <DefaultState val="16x9"/>
                <State name="4x3">
                    <When type="Property" frame="$parent/AspectRatioListener_4x3" Visible="True"/>
                    <Action type="SetAnchor" frame="$this" side="Left" relative="$parent" pos="Min" offset="-250"/>
                    <Action type="SendEvent" frame="$this" event="Reset"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_16x9" enabled="false"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_16x10" enabled="false"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_4x3" enabled="true"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_5x4" enabled="false"/>
                    <Action type="SendEvent" frame="$this" event="Play"/>
                </State>
    
                <State name="16x10">
                    <When type="Property" frame="$parent/AspectRatioListener_16x10" Visible="True"/>
                    <Action type="SetAnchor" frame="$this" side="Left" relative="$parent" pos="Min" offset="-100"/>
                    <Action type="SendEvent" frame="$this" event="Reset"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_16x9" enabled="false"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_16x10" enabled="true"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_4x3" enabled="false"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_5x4" enabled="false"/>
                    <Action type="SendEvent" frame="$this" event="Play"/>
                </State>
                
                <State name="16x9">
                    <When type="Property" frame="$parent/AspectRatioListener_16x9" Visible="True"/>
                    <Action type="SetAnchor" frame="$this" side="Left" relative="$parent" pos="Min" offset="0"/>
                    <Action type="SendEvent" frame="$this" event="Reset"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_16x9" enabled="true"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_16x10" enabled="false"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_4x3" enabled="false"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_5x4" enabled="false"/>
                    <Action type="SendEvent" frame="$this" event="Play"/>
                </State>
                <State name="5x4">
                    <When type="Property" frame="$parent/AspectRatioListener_5x4" Visible="True"/>
                    <Action type="SetAnchor" frame="$this" side="Left" relative="$parent" pos="Min" offset="-220"/>
                    <Action type="SendEvent" frame="$this" event="Reset"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_16x9" enabled="false"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_16x10" enabled="false"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_4x3" enabled="false"/>
                    <Action type="SetAnimationProperty" frame="$this" animation="Birth_5x4" enabled="true"/>
                    <Action type="SendEvent" frame="$this" event="Play"/>
                </State>
            </StateGroup>

            <Animation name="Birth">
                <Event event="OnShown" action="DirectionForward,Play" frame="$this"/>
                <Event event="Death" action="DirectionReverse,Play" frame="$this"/>
    
                <Controller type="Visibility" end="Pause" frame="$this/ScrollableFrame">
                    <Key type="Bool" time="0.0" value="False"/>
                    <Key type="Bool" time="0.25" value="False"/>
                    <Key type="Bool" time="0.3" value="True"/>
                </Controller>
            </Animation>

            <Animation name="Birth_16x9" flags="Disabled">
                <Event event="OnShown" action="DirectionForward,Play" frame="$this"/>
                <Event event="Death" action="DirectionReverse,Play" frame="$this"/>
                <Event event="Play" action="DirectionForward,Play" frame="$this"/>
                <Event event="Reset" action="Reset" frame="$this"/>
    
                <Controller type="Anchor" end="Pause" frame="$this" side="Left" relative="True">
                    <Key type="Curve" time="0.0" value="-1290" out="Fast" in="Slow"/>
                    <Key type="Curve" time="0.2" value="-150" in="Slow" out="Smooth"/>
                    <Key type="Curve" time="0.25" value="0" in="Smooth" out="Fast"/>
                </Controller>
            </Animation>

            <Animation name="Birth_4x3" flags="Disabled">
                <Event event="OnShown" action="DirectionForward,Play" frame="$this"/>
                <Event event="Death" action="DirectionReverse,Play" frame="$this"/>
                <Event event="Play" action="DirectionForward,Play" frame="$this"/>
                <Event event="Reset" action="Reset" frame="$this"/>
    
                <Controller type="Anchor" end="Pause" frame="$this" side="Left" relative="True">
                    <Key type="Curve" time="0.0" value="-1540" out="Fast" in="Slow"/>
                    <Key type="Curve" time="0.2" value="-400" in="Slow" out="Smooth"/>
                    <Key type="Curve" time="0.25" value="-250" in="Smooth" out="Fast"/>
                </Controller>
            </Animation>

            <Animation name="Birth_16x10" flags="Disabled">
                <Event event="OnShown" action="DirectionForward,Play" frame="$this"/>
                <Event event="Death" action="DirectionReverse,Play" frame="$this"/>
                <Event event="Play" action="DirectionForward,Play" frame="$this"/>
                <Event event="Reset" action="Reset" frame="$this"/>
    
                <Controller type="Anchor" end="Pause" frame="$this" side="Left" relative="True">
                    <Key type="Curve" time="0.0" value="-1390" out="Fast" in="Slow"/>
                    <Key type="Curve" time="0.2" value="-250" in="Slow" out="Smooth"/>
                    <Key type="Curve" time="0.25" value="-100" in="Smooth" out="Fast"/>
                </Controller>
            </Animation>

            <Animation name="Birth_5x4" flags="Disabled">
                <Event event="OnShown" action="DirectionForward,Play" frame="$this"/>
                <Event event="Death" action="DirectionReverse,Play" frame="$this"/>
                <Event event="Play" action="DirectionForward,Play" frame="$this"/>
                <Event event="Reset" action="Reset" frame="$this"/>
    
                <Controller type="Anchor" end="Pause" frame="$this" side="Left" relative="True">
                    <Key type="Curve" time="0.0" value="-1510" out="Fast" in="Slow"/>
                    <Key type="Curve" time="0.2" value="-370" in="Slow" out="Smooth"/>
                    <Key type="Curve" time="0.25" value="-220" in="Smooth" out="Fast"/>
                </Controller>
            </Animation>

            <Frame type="ScrollableFrame" name="ScrollableFrame">
                <Anchor relative="$parent/AnchorFrame" offset="-10"/>
                <AcceptsMouse val="true"/>

                <Frame type="Frame" name="ContainerFrame">
                    <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                    <!-- Modify Anchor to last button in the list -->
                    <Anchor side="Bottom" relative="$this/ArchiveItem21" pos="Max" offset="0"/>
                    <Anchor side="Left" relative="$parent" pos="Min" offset="0"/>
                    <Anchor side="Right" relative="$parent/ScrollBarBackground" pos="Min" offset="0"/>
                    
                    <Frame type="Button" name="ArchiveItem1" template="LotC_GlueMenuTemplates/ArchiveItemButtonTemplate">
                        <Anchor side="Top" relative="$parent" pos="Min" offset="0"/>
                    </Frame>

                    <Frame type="Button" name="ArchiveItem2" template="LotC_GlueMenuTemplates/ArchiveItemButtonTemplate"/>
                    <Frame type="Button" name="ArchiveItem3" template="LotC_GlueMenuTemplates/ArchiveItemButtonTemplate"/>
                    <Frame type="Button" name="ArchiveItem4" template="LotC_GlueMenuTemplates/ArchiveItemButtonTemplate"/>
                    <Frame type="Button" name="ArchiveItem5" template="LotC_GlueMenuTemplates/ArchiveItemButtonTemplate"/>
                    <Frame type="Button" name="ArchiveItem6" template="LotC_GlueMenuTemplates/ArchiveItemButtonTemplate"/>
                    <Frame type="Button" name="ArchiveItem7" template="LotC_GlueMenuTemplates/ArchiveItemButtonTemplate"/>
                    <Frame type="Button" name="ArchiveItem8" template="LotC_GlueMenuTemplates/ArchiveItemButtonTemplate"/>
