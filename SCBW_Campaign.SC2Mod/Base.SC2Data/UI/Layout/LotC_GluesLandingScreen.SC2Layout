            </Controller>

            <Controller type="Visibility" end="Pause" frame="$this/ArchivesButton">
                <Key type="Bool" time="0.0" value="True"/>
            </Controller>

            <Controller type="Visibility" end="Pause" frame="$this/CreditsButton">
                <Key type="Bool" time="0.0" value="True"/>
            </Controller>

            <Controller type="Visibility" end="Pause" frame="$this/AchievementsButton">
                <Key type="Bool" time="0.0" value="True"/>
            </Controller>
        </Animation>

        <Animation name="LandingDeath">
            <Event event="Death" action="Reset,Play" frame="$this"/>

            <Controller type="Event" end="Pause" frame="$this/StartButtonPanel">
                <Key type="Event" time="0.0" event="Death"/>
            </Controller>

            <Controller type="Event" end="Pause" frame="$this/QuitButtonPanel">
                <Key type="Event" time="0.0" event="Death"/>
            </Controller>

            <Controller type="Event" end="Pause" frame="$this/ArchivesButton">
                <Key type="Event" time="0.0" event="Death"/>
            </Controller>

            <Controller type="Event" end="Pause" frame="$this/CreditsButton">
