                    <When type="Property" frame="$this" Visible="False"/>

                    <Action type="SetProperty" frame="$parent/ChapterPanel" Enabled="True"/>
                    <Action type="SetProperty" frame="$parent/BackButton" Enabled="True"/>
                </State>

                <State name="Disabled">
                    <When type="Property" frame="$this" Visible="True"/>

                    <Action type="SetProperty" frame="$parent/ChapterPanel" Enabled="False"/>
                    <Action type="SetProperty" frame="$parent/BackButton" Enabled="False"/>
                </State>
            </StateGroup>

            <Frame type="Image" name="BackgroundFrame">
                <Anchor relative="$parent"/>

                <Color val="000000"/>
                <Alpha val="110"/>
                <AcceptsMouse val="True"/>
            </Frame>

            <Frame type="Frame" name="DifficultyList">
                <Anchor side="Top" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Bottom" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
                <Anchor side="Right" relative="$parent" pos="MId" offset="0"/>

                <Width val="740"/>
                <Height val="520"/>

                <Frame type="Image" name="Background">
                    <Anchor relative="$parent"/>

                    <Texture val="@UI/Glues/StandardButton_Normal_Terr"/>
                    <TextureType val="NineSlice"/>
                </Frame>

                <Frame type="Label" name="TitleLabel">
                    <Anchor side="Left" relative="$parent" pos="Mid" offset="0"/>
                    <Anchor side="Right" relative="$parent" pos="Mid" offset="0"/>
                    <Anchor side="Top" relative="$parent" pos="Min" offset="24"/>

                    <Style val="UED_Glues_CampaignMissionTitle"/>
