            <Anchor side="Left" relative="$parent" pos="Min" offset="190"/>

            <Text val="@UI/KLC/Launcher/Landing_AchievementsButton"/>
            <Shortcut val="@UI/KLC/Launcher/Landing_AchievementsButton_Hotkey"/>
        </Frame>

        <Frame type="Button" name="CreditsButton" template="LotC_GlueMenuTemplates/GlueMenuButtonSubRightTemplate">
            <Anchor side="Bottom" relative="$parent" pos="Max" offset="-30"/>
            <Anchor side="Right" relative="$parent" pos="Max" offset="-170"/>

            <Text val="@UI/KLC/Launcher/Landing_CreditsButton"/>
            <Shortcut val="@UI/KLC/Launcher/Landing_CreditsButton_Hotkey"/>
        </Frame>
        <!-- PatchNotes Panel -->
    </Frame>

    <Frame type="Frame" name="GlueCampaignSelectionPanelTemplate">
